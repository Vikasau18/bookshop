<section>
    <form method="post">
        <input type="hidden" asp-for="ProductId" />

        <div class=" py-5">
            <div class="row justify-content-center mb-3">
                <div class="col-md-12 ">
                    <div class="card border-0 rounded-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-xl-6 mb-4 mb-lg-0">
                                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                        <img src="@Model.Product.ImageUrl"
                                             class="w-75" height="440px" />
                                     
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <h5>@Model.Product.Title</h5>
                                    
                                    <div class="mt-1 mb-0 text-muted small mb-4 ">
                                        @Html.Raw(@Model.Product.Discription)
                                    </div>
                                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                        <div class="d-flex flex-row align-items-center mb-1">
                                            <h4 class="mb-1 me-1">@Model.Product.Price.ToString("c")</h4>
                                            <span class="text-danger"><s> @Model.Product.ListPrice.ToString("C")</s></span>
                                        </div>

                                    </div>
                                    <div class="row text-center pl-2">
                                        <div class="p-1 col-2  border-bottom" style="background-color:#ff3e00; color:white;">
                                            <div>Quantity</div>
                                        </div>
                                        <div class="p-1 col-2  border-bottom" style="background-color:#ff3e00;color:white;">
                                            <div>1-49</div>
                                        </div>
                                        <div class="p-1 col-2  border-bottom" style="background-color:#ff3e00;color:white;">
                                            <div>50-99</div>
                                        </div>
                                        <div class="p-1 col-2  border-bottom" style="background-color:#ff3e00; color:white;">
                                            <div>100+</div>
                                        </div>
                                    </div>
                                    <div class="row text-center pl-2" style="color:white; font-weight:bold">
                                        <div class="p-1 col-2 bg-secondary">
                                            <div>Price</div>
                                        </div>
                                        <div class="p-1 col-2 bg-secondary">
                                            <div>@Model.Product.Price.ToString("C")</div>
                                        </div>
                                        <div class="p-1 col-2 bg-secondary">
                                            <div>@Model.Product.Price50.ToString("C")</div>
                                        </div>
                                        <div class="p-1 col-2 bg-secondary">
                                            <div>@Model.Product.Price100.ToString("C")</div>
                                        </div>
                                    </div>
                                    <div class="row pr-2 mt-4">
                                        <div class="col-4 text-success"><h4>Quantity</h4></div>
                                        <div class="col-10"><input asp-for="@Model.Count" class="form-control-plaintext" /></div>
                                    </div>
                                    <div class="d-flex mt-4">
                                        <button class="btn btn-outline-success btn-sm" type="submit">Add To Cart</button>
                                        <button class="btn btn-danger col-sm-4 ml-4" type="submit">Cancel</button>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </form>
</section>