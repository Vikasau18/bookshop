<div class="row">
    <div class="col-9">
        <h2 class="h1 fw-bold mb-5 mx-1 ">Company List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Company
        </a>
    </div>
</div>
<div class="border p-2 m-2">
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Phone Number</th>
                <th>PostalCode</th>
                <th>Is Authorized</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts
{
    <script src="~/js/Company.js"></script>
}
